pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'Github', url: 'https://github.com/musrafulhaq/Deploy_React_app.git'
                git 'https://github.com/musrafulhaq/Deploy_React_app.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeJS 14') {
                    sh 'npm install' 
                }
            }
        }
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeJS 14') {
                    sh 'npm run build'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                
                script {
                    dockerImage = docker.build('react-app:v1') 
                    // dockerImage.push() Push the image in repo
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploy in server'
            }
        }
    }
}
